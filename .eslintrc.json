{
  "extends": [
    "@associatedpress/eslint-config-interact",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "NODE_ENV": "readonly",
    "PROJECT_BUILD_TIME": "readonly",
    "PROJECT_METADATA": "readonly",
    "PROJECT_BASE_URL": "readonly",
    "PROJECT_DATA_URL": "readonly",
    "GOOGLE_ANALYTICS_ID": "readonly"
  },
  "rules": {
    "no-unexpected-multiline": "off",
    "semi": ["error", "never"],
    "comma-dangle": [
      "error",
      {
        "imports": "always-multiline",
        "arrays": "always-multiline",
        "objects": "always-multiline"
      }
    ]
  }
}
